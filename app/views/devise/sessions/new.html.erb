<style>
  body {
    background-color: #e7e7e7;
  }
</style>

<div class="container">
  <div class="d-none d-md-block" style="margin-top: 200px;"></div>
  <div class="d-md-none" style="margin-top:70px;"></div>
  <div class="row login_box">
    <div class="col-md-6" style="line-height: 250px; text-align: center;">
      <img src="<%= asset_path 'logo.png' %>">
    </div>
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if alert %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= alert %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% elsif notice %>
          <div class="alert alert-info alert-dismissible fade show" role="alert">
            <%= notice %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>
      
        <div class="col-md-12" style="margin-top: 30px; margin-left: -10px;">
          <label class="form_1">
            <%= f.email_field :email, id: "form_1", autofocus: true, autocomplete: "email", placeholder: " " %>
            <span class="label">이메일</span>
          </label>
        </div>
        
        <div class="col-md-12" style="margin-top: 30px; margin-left: -10px;">
          <label class="form_2">
            <%= f.password_field :password, class: "devise_noborder", id: "form_2", autofocus: true, autocomplete: "off", placeholder: " " %>
            <span class="label">암호</span>
          </label>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      
        <div class="actions" style="margin-top: 20px">
          <%= f.submit "로그인", class: "btn btn-sm btn-info" %>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-12" align="center" style="margin-top: 30px">
      <%= link_to " kbs4674@naver.com", "mailto: kbs4674@naver.com", class: "far fa-envelope", style: "color: black; text-decoration: none;" %>
    </div>
    
  </div>
  
  <div style="margin-top: 30px" align="center">
    <%= render "devise/shared/info" %>
  </div>
</div>