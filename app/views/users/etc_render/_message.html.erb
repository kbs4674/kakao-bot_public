<% if alert %>
    <div class="alert alert-danger tlert-dismissible fade show text-center" style="margin-top: 10px; margin-bottom: -15px; padding: 10px; background-color: #FF4B5C; color: white; border-radius: 0; border: 0;">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
<% elsif notice %>
    <div class="alert alert-danger tlert-dismissible fade show text-center" style=" margin-top: 10px; margin-bottom: -15px; padding: 10px; background-color: #43AC6A; color: white; border-radius: 0; border: 0;">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
<% end %>